#include <iostream>
using namespace std;

int main()
{
    int n, sum = 0;

    cout << "Enter a positive integer: ";
    cin >> n;

    for (int i = 1; i <= n; ++i) {
        sum += i;
    }

    cout << "Sum = " << sum << endl;

    ///OR You can use
    cout << "Enter a positive integer: ";
    cin >> n;
    sum = (n*(n+1))/2;
    cout << "Sum = " << sum << endl;
    return 0;
}
